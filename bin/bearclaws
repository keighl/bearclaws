#!/usr/bin/env ruby

require 'bearclaws'
require 'optparse'

options = {}

opt_parser = OptionParser.new do |opt|
  opt.banner = "Bearclaws"
  opt.separator  "Analyze your AWS-Allocated-Cost spreadsheet by a specified tag"
  opt.separator  ""
  opt.separator  "bearclaws [CSV] [TAG_COLUMN] [OPTIONS] --- "
  opt.separator  ""
  opt.separator  "Options"

  opt.on("-o","--output OUTPUT","where do you want the results to be written?") do |o|
    options[:output] = o
  end

  opt.on("-h","--help","help")
end

opt_parser.parse!

case ARGV[0]

when "help", nil
  puts opt_parser
else
  output = "bearclaws.csv"
  output = options[:output] unless options[:output].nil?
  groups = Bearclaws.analyze File.open(ARGV[0]), ARGV[1].to_i

  CSV.open(output.to_s, "wb") do |csv|
    groups.each do |group|
      csv << [group.name, nil]
      group.subtotals.each do |key, subtotal|
        csv << [key, ('%.2f' % subtotal)]
      end
      csv << ['Total', ('%.2f' %  group.total)]
      csv << [nil, nil]
    end
  end
end